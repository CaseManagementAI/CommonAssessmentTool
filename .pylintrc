# A basic .pylintrc file to make pylint pass
[MASTER]
# Path to a configuration file. Empty means it's not used.
# rcfile=

[MESSAGES CONTROL]
# Disable common, less useful checks to make linting easier
disable=
    unused-argument,          # Disable unused argument warnings.
    too-many-arguments,        # Allow more arguments for functions.
    too-many-locals,           # Allow more local variables in functions.
    missing-function-docstring, # Allow functions without docstrings.
    trailing-whitespace,       # Ignore trailing whitespaces.
    wrong-import-order,        # Relax import order checks.
    unused-import,             # Ignore unused import warnings.
    too-many-instance-attributes, # Allow more instance attributes in classes.

enable=
    deprecated-pragma,
    use-symbolic-message-instead,

[FORMAT]
# Maximum line length (more flexible for large projects)
max-line-length=120

# Minimum docstring length for functions and methods
docstring-min-length=5

[DESIGN]
# Maximum number of arguments allowed in a function
max-args=10

# Maximum number of local variables in a function
max-locals=20

# Maximum number of attributes in a class
max-attributes=15

# Maximum number of methods in a class
max-methods=20

[REPORTS]
# Set the output format to text (use html if you prefer)
output-format=text

[TYPECHECK]
# Ignore specific modules from type checking (optional)
ignored-modules=typing
